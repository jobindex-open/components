{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "strict": true,
        "composite": true,
        "baseUrl": ".",
        "rootDir": "src",
        "target": "es2020",
        "module": "es2020",
        "forceConsistentCasingInFileNames": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
        "outDir": "dist",
        "declaration": true
        //"types": ["vite/client"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/global.d.ts"
    ],
    "exclude": ["src/**/__tests__/*"]
}
