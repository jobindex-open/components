{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "test": {
            "dependsOn": ["^test"],
            "env": ["PW_TEST_CONNECT_WS_ENDPOINT"]
        },
        "test:browser": {
            "dependsOn": ["^test:browser"],
            "env": ["PW_TEST_CONNECT_WS_ENDPOINT"]
        },
        "coverage": {
            "outputs": ["coverage/**"],
            "dependsOn": ["^coverage"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "clean": {
            "dependsOn": ["^clean"],
            "cache": false
        },
        "build": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build"],
            "env": ["NODE_ENV"]
        },
        "build:types": {
            "dependsOn": ["^build:types"],
            "outputs": ["dist/types/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false,
            "env": ["NODE_ENV"]
        }
    }
}
