{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "test": {
            "dependsOn": ["^test"]
        },
        "coverage": {
            "outputs": ["coverage/**"],
            "dependsOn": ["^coverage"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "clean": {
            "dependsOn": ["^clean"],
            "cache": false
        },
        "build": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build"]
        },
        "build:types": {
            "dependsOn": ["^build:types"],
            "outputs": ["dist/types/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
